{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "noLib": false,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "outDir": "./dist",
    },
    "include": ["src/**/*"]
}
